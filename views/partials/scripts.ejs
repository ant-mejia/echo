<script type="text/javascript">
$(document).ready(function() {
  // Passing a selector and an options object.
  var stickys = UIkit.sticky('.sticky', {
    offset: 50,
    top: 100
  });

  // Functional components should omit the 'element' argument.
  var navbar = UIkit.navbar('nav');
  var toggle = UIkit.toggle('.uk-toggle',{});


  $(window).scroll(function () {
    if ($(this).scrollTop() > $(".main-profile-card").height() - $(".uk-navbar-container").height()) {
      $(".uk-navbar-container").addClass("uk-navbar-opaque").removeClass("uk-navbar-transparent");
    } else {
      $(".uk-navbar-container").addClass("uk-navbar-transparent").removeClass("uk-navbar-opaque");
    }
  });
});
</script>
