<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-beta.9/js/uikit.min.js"></script>
<script type="text/javascript">
$(document).ready(function() {
  // Passing a selector and an options object.
  var stickys = UIkit.sticky('.sticky', {
    offset: 50,
    top: 100
  });

  // Functional components should omit the 'element' argument.
  var navbar = UIkit.navbar('nav');
  var toggle = UIkit.toggle('.uk-toggle',{});

  if ($('.main-wrapper').hasClass('trans-top')) {
    $('.uk-navbar-container').addClass('uk-navbar-transparent');
    $(window).scroll(function () {
      if ($(this).scrollTop() > $(".main-profile-card").height() - $(".uk-navbar-container").height()) {
        $(".uk-navbar-container").addClass("uk-navbar-opaque").removeClass("uk-navbar-transparent");
      } else {
        $(".uk-navbar-container").addClass("uk-navbar-transparent").removeClass("uk-navbar-opaque");
      }
    });
  } else if ($('.main-wrapper').hasClass('hero')) {
    $(window).scroll(function () {
      if ($(this).scrollTop() > $(".jumbo").height() - $(".uk-navbar-container").height()) {
        $(".uk-navbar-container").addClass("uk-navbar-opaque").removeClass("uk-navbar-transparent");
      } else {
        $(".uk-navbar-container").addClass("uk-navbar-transparent").removeClass("uk-navbar-opaque");
      }
    });
  } else if ($('.uk-navbar-container').hasClass('uk-navbar-transparent')) {
    $('.uk-navbar-container').removeClass('uk-navbar-transparent').addClass('uk-navbar-opaque');
  }
});


</script>
