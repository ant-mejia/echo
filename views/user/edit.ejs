<!DOCTYPE html>
<html>
<% include ../partials/head %>
  <body>
    <% include ../partials/header %>

    <div class="container">
    <div class="row">
    <form class="col s12" action="<%= '/user/' + user.id %>" method="PUT">
      <div class="row">
      <div class="input-field col s6">
          <i class="material-icons prefix">account_circle</i>
          <input id"icon_prefix" type="text" name="firstName" value="<%= user.firstname %>" />
          <label class="active"></label>
      </div>
      </div>

      <div class="row">
      <div class="input-field col s6">
          <i class="material-icons prefix">account_circle</i>
          <input id"icon_prefix" type="text" name="lastName" value="<%= user.lastname %>" />
          <label class="active"></label>
      </div>
      </div>

      <div class="row">
      <div class="input-field col s6">
          <i class="material-icons prefix">vpn_key</i>
          <input id"icon_prefix" type="text" name="password" value="<%= user.password %>" />
          <label class="active"></label>
      </div>
      </div>

      <div class="row">
      <div class="input-field col s6">
          <i class="material-icons prefix">email</i>
          <input id"icon_prefix" type="text" name="email" value="<%= user.email %>" />
          <label class="active"></label>
      </div>
      </div>


      <div class="row">
      <div class="input-field col s8">
      <a href="<%= '/user/' %>" class="waves-effect waves-light btn">Cancel</a>
      <p><input class="waves-effect waves-light btn" type="submit" value="Save" /></p>
      </div>
      </div>

    </form>


  </div>
</div>
</body>
</html>
