<!DOCTYPE html>
<html>
  <head>
    <title><%= 'Users - Edit ' + user.name + "'s Profile" %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  </head>
  <body>

  <nav>
    <div class="nav-wrapper">
    <a href="/edit" class="brand-logo center">Edit your Profile</a>
    </div>
  </nav>

    <div class="container">
    <div class="row">


    <form class="col s12" action="<%= '/user/' + user.id + '?_method=PUT' %>" method="POST">

      <div class="row">
      <div class="input-field col s6">
          <i class="material-icons prefix">account_circle</i>
          <input id"icon_prefix" type="text" name="name" value="<%= user.firstname %>" />
          <label clas="active"></label>
      </div>
      </div>

      <div class="row">
      <div class="input-field col s6">
          <i class="material-icons prefix">account_circle</i>
          <input id"icon_prefix" type="text" name="name" value="<%= user.lastname %>" />
          <label clas="active"></label>
      </div>
      </div>

      <div class="row">
      <div class="input-field col s6">
          <i class="material-icons prefix">vpn_key</i>
          <input id"icon_prefix" type="text" name="name" value="<%= user.password %>" />
          <label clas="active"></label>
      </div>
      </div>

      <div class="row">
      <div class="input-field col s6">
          <i class="material-icons prefix">email</i>
          <input id"icon_prefix" type="text" name="name" value="<%= user.email %>" />
          <label clas="active"></label>
      </div>
      </div>


      <div class="row">
      <div class="input-field col s8">
      <a href="<%= '/user/' + user.id %>" class="waves-effect waves-light btn">Cancel</a>
      <p><input class="waves-effect waves-light btn" type="submit" value="Save" /></p>
      </div>
      </div>
    </form>

    <form action="<%= '/user/' + user.id + '?_method=DELETE' %>" method="POST">
    <input class="waves-effect waves-light btn" type="submit" value="Delete user" />
    </form>

  </div>
</div>

</body>
</html>
