<!DOCTYPE html>
<html>

<% include partials/head %>
    <body class='Feed'>
      <% include partials/header %>
        <div class="main-wrapper">
          <div class="main-profile-card uk-height-large uk-max-height-large">
            <div class="uk-width-large uk-align-center uk-text-center">
              <h2 class="profile-name"><%= user.username %></h2>
              <h4 class="profile-details"><%= user.username %></h4>
              <h4 class="profile-details">Joined <%= joinDate %></h4>
            </div>
          </div>
            <div id="message-feed" class="uk-container">
                <h1>Feed</h1>
                <% include partials/message-feed %>
                <a class="uk-button uk-button-default" href="#modal-full" uk-toggle>Open</a>
                <div id="modal-full" class="uk-modal-full" uk-modal>
                    <div class="uk-modal-dialog">
                        <button class="uk-modal-close-full" type="button" uk-close></button>
                        <div>
                            <div class="uk-padding-large uk-height-viewport">
                              <form class="new-message uk-height-1-1" action="/" method="post">
                                <input class="uk-input uk-form-blank uk-form-width-medium db" type="text" name="content" placeholder="Enter Message">
                                <button class="uk-button uk-button-primary db" type="submit">Add Message</button>
                              </form>
                            </div>
                        </div>
                    </div>
                </div>
              </div>
            </div>
        <% include partials/footer %>
    </body>
    <% include partials/scripts %>
</html>
